<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
            android:scrollbarThumbVertical="@android:color/transparent"
            android:layout_width="80dp"
            android:layout_height="match_parent">
        <FrameLayout
                android:id="@+id/conteiner_frame"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:id="@+id/content_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>
            <LinearLayout
                    android:id="@+id/content_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>

            <LinearLayout
                    android:id="@+id/toolbar"
                    android:layout_alignParentTop="true"
                    android:background="#BCBCBC"
                    android:layout_height="50dp"
                    android:clipToPadding="true"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/iv_tool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"/>

            </LinearLayout>

        </FrameLayout>
    </ScrollView>
    <ScrollView
            android:id="@+id/scrollView"
            android:scrollbarThumbVertical="@android:color/transparent"
            android:layout_width="80dp"
            android:layout_gravity="start|bottom"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/left_drawer"
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp"
                android:gravity="center">
         <ImageView
                    android:id="@+id/icn1"
                    android:src="@drawable/icn_1"
                    android:background="#33334C"
                    android:visibility="gone"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            <ImageView
                    android:id="@+id/icn2"
                    android:src="@drawable/icn_2"
                    android:background="#33334C"
                    android:visibility="gone"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            <ImageView
                    android:id="@+id/icn3"
                    android:src="@drawable/icn_3"
                    android:background="#33334C"
                    android:visibility="gone"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            <ImageView
                    android:id="@+id/icn4"
                    android:src="@drawable/icn_4"
                    android:background="#33334C"
                    android:visibility="gone"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            <ImageView
                    android:id="@+id/icn5"
                    android:src="@drawable/icn_5"
                    android:background="#33334C"
                    android:visibility="gone"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            <ImageView
                    android:id="@+id/icn6"
                    android:src="@drawable/icn_6"
                    android:background="#33334C"
                    android:visibility="gone"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            <ImageView
                    android:id="@+id/icn7"
                    android:src="@drawable/icn_7"
                    android:background="#33334C"
                    android:visibility="gone"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>